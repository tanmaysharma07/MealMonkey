<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LiveTrackingFragment">

    <ImageView
        android:id="@+id/live_tracking_image"
        android:layout_width="240dp"
        android:layout_height="305dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/live_tracking_vector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/right_slider_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/right_slider_indicators"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_tracking_image" />

    <TextView
        android:id="@+id/live_tracking"
        style="@style/textStyle"
        android:layout_marginTop="30dp"
        android:text="@string/live_tracking"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/right_slider_indicators" />

    <TextView
        android:id="@+id/live_tracking_text"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:text="@string/real_time_tracking_of_your_food_on_the_app_once_you_placed_the_order"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_tracking" />

    <Button
        android:id="@+id/live_tracking_button"
        style="@style/buttonStyle"
        android:layout_marginTop="45dp"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_tracking_text" />

</androidx.constraintlayout.widget.ConstraintLayout>