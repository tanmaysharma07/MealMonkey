<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notification_start_point"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/notification_start_point"
                app:layout_constraintBottom_toBottomOf="@+id/your_orders_has_been_picked_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/your_orders_has_been_picked_up" />

            <TextView
                android:id="@+id/your_orders_has_been_picked_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/your_orders_has_been_picked_up"
                app:layout_constraintStart_toEndOf="@+id/notification_start_point"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/now"
                android:textColor="@color/grey2"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/your_orders_has_been_picked_up"
                app:layout_constraintTop_toBottomOf="@+id/your_orders_has_been_picked_up" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/path_10236"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/your_orders_has_been_picked_up"
                app:layout_constraintStart_toStartOf="@+id/your_orders_has_been_picked_up" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</FrameLayout>