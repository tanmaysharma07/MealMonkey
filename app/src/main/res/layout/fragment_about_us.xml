<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.fragment.aboutUs.AboutUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/aboutUsBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/about_us"
            app:layout_constraintEnd_toStartOf="@id/about_us"
            app:layout_constraintTop_toTopOf="@id/about_us" />

        <TextView
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/about_us"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/shopping_cart"
            app:layout_constraintBottom_toBottomOf="@+id/about_us"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/about_us" />

        <ImageView
            android:id="@+id/aboutUsDotOne"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/notification_start_point"
            app:layout_constraintStart_toStartOf="@+id/about_us"
            app:layout_constraintTop_toBottomOf="@+id/about_us" />

        <TextView
            android:id="@+id/about_us_para1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="30dp"
            android:text="@string/about_us_para1"
            app:layout_constraintStart_toEndOf="@+id/aboutUsDotOne"
            app:layout_constraintTop_toTopOf="@+id/aboutUsDotOne" />

        <ImageView
            android:id="@+id/aboutUsDotTwo"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="30dp"
            android:src="@drawable/notification_start_point"
            app:layout_constraintStart_toStartOf="@+id/about_us"
            app:layout_constraintTop_toBottomOf="@+id/about_us_para1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="30dp"
            android:text="@string/about_us_para1"
            app:layout_constraintStart_toEndOf="@+id/aboutUsDotTwo"
            app:layout_constraintTop_toTopOf="@+id/aboutUsDotTwo" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>